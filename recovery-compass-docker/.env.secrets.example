# Recovery Compass Docker Secrets Template
# Copy this file to .env.secrets and fill with real values
# NEVER commit .env.secrets to version control

# External API Credentials
AIRTABLE_API_KEY=your_airtable_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
PERPLEXITY_API_KEY=your_perplexity_key_here
GITHUB_TOKEN=your_github_token_here
# Note: Charity Navigator credentials should be stored in CI/CD secrets
# not in .env.secrets files. See SECRETS_MANAGEMENT.md

# Database Credentials
POSTGRES_USER=recovery_compass
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=recovery_compass
DATABASE_URL=postgresql://recovery_compass:your_secure_password_here@postgres:5432/recovery_compass

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379

# Security Keys
JWT_SECRET=your_jwt_secret_here_minimum_32_chars
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Service Authentication
INTERNAL_API_KEY=your_internal_api_key_here
HEALTH_CHECK_TOKEN=your_health_token_here

# MCP Configuration
MCP_FILESYSTEM_PATH=/path/to/mcp/data
MCP_CLOUDFLARE_TOKEN=your_cloudflare_token_here

# Service Configuration
NODE_ENV=development
LOG_LEVEL=info
API_BASE=http://erd-platform:3000

# React App Configuration (for partner-portal)
REACT_APP_API_URL=http://localhost:3000
REACT_APP_METRICS_URL=http://localhost:9090
