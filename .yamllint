extends: default

rules:
  line-length:
    max: 120
    level: warning
  truthy:
    allowed-values: ['true', 'false']
    check-keys: true
  comments:
    min-spaces-from-content: 2
  brackets:
    max-spaces-inside: 1
  indentation:
    spaces: 2
    indent-sequences: true
  document-start: disable
